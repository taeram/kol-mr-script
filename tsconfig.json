{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "app/*": [
        "./src/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "es2018"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "strict": true
  }
}
